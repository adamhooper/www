<h1>Editing comment</h1>

<% form_for(@comment) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :blog_post_id %><br />
    <%= f.text_field :blog_post_id %>
  </p>
  <p>
    <%= f.label :author_name %><br />
    <%= f.text_field :author_name %>
  </p>
  <p>
    <%= f.label :author_ip %><br />
    <%= f.text_field :author_ip %>
  </p>
  <p>
    <%= f.label :author_website %><br />
    <%= f.text_field :author_website %>
  </p>
  <p>
    <%= f.label :author_email %><br />
    <%= f.text_field :author_email %>
  </p>
  <p>
    <%= f.label :body %><br />
    <%= f.text_area :body %>
  </p>
  <p>
    <%= f.submit "Update" %>
  </p>
<% end %>

<%= link_to 'Show', @comment %> |
<%= link_to 'Back', comments_path %>
