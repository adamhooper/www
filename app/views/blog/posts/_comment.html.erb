<div class="blog-comment">
  <div class="blog-comment-author">
    <% if comment.author_website? %>
      <%= link_to(comment.author_name, comment_author_url(comment.author_website)) %>
    <% else %>
      <span><%= comment.author_name %></span>
    <% end %>
    on
    <%= comment.created_at.to_formatted_s(:long) %>:
  </div>
  <div class="blog-comment-body">
    <%= render_comment comment %>
  </div>
  <% if admin? %>
    <div class="blog-post-comment-links">
      <%= button_to 'Delete', blog_post_comment_path(comment.post, comment), :method => :delete, :confirm => 'Are you sure you want to destroy this comment?' %>
    </div>
  <% end %>
</div>
