.comment
  .author
    - if comment.author_website?
      = link_to(comment.author_name, comment_author_url(comment.author_website), :rel => 'nofollow')
    - else
      %span.author= comment.author_name
    - if comment.created_at
      on
      %span.date= comment.created_at.to_date.to_formatted_s(:long)
  .body
    = render_comment(comment)
  - if admin?
    .admin
      Spam status:
      = comment.spam_status
      .links
        - if comment.spam_status != 'admin-says-spam'
          = button_to('Mark spam', spam_blog_post_comment_path(comment.post, comment), :method => :post, :confirm => 'Are you sure this is spam?')
        - if comment.spam_status != 'admin-says-ham'
          = button_to('Mark ham', ham_blog_post_comment_path(comment.post, comment), :method => :post, :confirm => 'Are you sure this is ham?')
        = button_to('Delete', blog_post_comment_path(comment.post, comment), :method => :delete, :confirm => 'Are you sure you want to destroy this comment?')
