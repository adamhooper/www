- content_for(:title, @post.title)
- content_for(:title_href_path, url_for(@post))

- content_for(:bottom) do
  %footer
    %p.blurb These opinions are all mine.

= render('post', :post => @post)

#comments.blog-comments
  -#%a.muut{:href => "https://muut.com/i/adamhooper/comments", :type => "dynamic"} Comments
  -#%script{:src => "//cdn.muut.com/1/moot.min.js"}
  :plain
    <div id="disqus_thread"></div>
    <script type="text/javascript">
        /* * * CONFIGURATION VARIABLES * * */
        var disqus_shortname = 'adamhooper';
        
        /* * * DON'T EDIT BELOW THIS LINE * * */
        (function() {
            var dsq = document.createElement('script'); dsq.type = 'text/javascript'; dsq.async = true;
            dsq.src = '//' + disqus_shortname + '.disqus.com/embed.js';
            (document.getElementsByTagName('head')[0] || document.getElementsByTagName('body')[0]).appendChild(dsq);
        })();
    </script>
